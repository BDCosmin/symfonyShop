{{ include ('default/parts/header.html.twig', { 'categories': categories|default([]) }) }}

{% block body %}
    <div class="container mt-5">
        <h1>Category index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_edit', {'id': category.id}) }}">
                            <button type="button" class="btn btn-primary">Edit</button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_form') }}">
            <button type="button" class="btn btn-warning">Add category</button>
        </a>
    </div>
{% endblock %}
